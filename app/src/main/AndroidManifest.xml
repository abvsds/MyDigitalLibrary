<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookmanager">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookManager"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".GoogleMaps"
            android:label="Map with your current location"
            android:theme="@style/Theme.BookManager"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ResetPassword"
           android:theme="@style/Theme.BookManager.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EditBookReadPage"
            android:label="Edit a book read"
            android:theme="@style/Theme.BookManager"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EditWishBooksPage"
            android:label="Edit a wished book"
            android:theme="@style/Theme.BookManager"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".StatisticsPage"
            android:label="Your Statistics"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".BookDetailsApi"
            android:label="Details about book"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ViewReadBooks"
            android:label="BookList"
            android:theme="@style/Theme.BookManager"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ViewWishBooks"
            android:label="WishList"
            android:theme="@style/Theme.BookManager"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddWishBooksPage"
            android:label="Add a book in WishList"
            android:theme="@style/Theme.BookManager"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddReadBooksPage"
            android:label="Add a new read book"
            android:theme="@style/Theme.BookManager"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SearchBooksPage"
            android:label="Find info about a book"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AboutPage"
            android:label="About app"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HomePage"
            android:label="Home"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".RegisterPage"
           android:label="Register Form"
            android:theme="@style/Theme.BookManager.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginPage"
            android:theme="@style/Theme.BookManager.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>