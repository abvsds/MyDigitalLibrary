<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8DAEF"
    android:padding="10dp"
    tools:context=".LoginPage">


    <EditText
        android:id="@+id/usernameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passwordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameId"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#566573"
        tools:visibility="visible" />

    <Button
        android:id="@+id/loginId"
        android:layout_width="207dp"
        android:layout_height="40dp"
        android:layout_below="@+id/passwordId"
        android:layout_marginTop="78dp"
        android:background="@drawable/login_button"
        android:text="Login"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginId"
        android:layout_marginTop="100dp"
        android:clickable="false"
        android:text="Not registered? Create a free account"
        android:textColor="#566573"
        android:textColorLink="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginId"
        app:layout_constraintVertical_bias="0.148" />

    <Button
        android:id="@+id/gotoregisterID"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:layout_below="@+id/loginId"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="200dp"
        android:text="here"
         />
</RelativeLayout>