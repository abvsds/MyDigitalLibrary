<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/book_pages"
    tools:context=".ResetPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/aclonica"
        android:text="Reset password"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rr_usernameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/aclonica"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="22sp" />

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:passwordToggleEnabled="true"
    android:layout_marginTop="240dp"
    android:textColorHint="#878080"
    android:layout_centerHorizontal="true">
    <EditText
        android:id="@+id/rr_passwordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor"
        android:fontFamily="@font/aclonica"
        android:inputType="textPassword"
        android:hint="New password"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        tools:visibility="visible" />

</com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="300dp"
        android:textColorHint="#878080"
        android:layout_centerHorizontal="true">

    <EditText
        android:id="@+id/rrepasswordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor"
        android:hint="Confirm password"
        android:fontFamily="@font/aclonica"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword" />



   </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/rr_buttonId"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Reset password"
        android:layout_marginTop="420dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/aclonica"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/passdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="The password should contain minimum 10 characters: minimum 1 capital letter, 1 lowercase letter, 1 special character and 1 figure. "
        android:layout_marginTop="520dp"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
